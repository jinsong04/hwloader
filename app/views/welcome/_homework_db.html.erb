<div class="col s12 m6">
  <div class="card blue-grey darken-1">
    <div class="card-content white-text">
      <span class="card-title"><%= homework.subject %> - <%= homework.teacher %></span>
      <p><%= homework.content %></p>
    </div>
    <div class="card-action">
      <% if homework.url.nil? or homework.url.empty? %>
      <a href="#">Read More</a>
      <% else %>
      <a href="<%= homework.url %>">Read More</a>
      <% end %>
      <a href="/welcome/delete_homework/<%= homework.id %>">Done</a>
    </div>
  </div>
</div>